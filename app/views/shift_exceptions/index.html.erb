<h1>Listing shift_exceptions</h1>

<table>
  <thead>
    <tr>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Employee</th>
      <th>Is absence</th>
      <th>Shift</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shift_exceptions.each do |shift_exception| %>
      <tr>
        <td><%= shift_exception.start_datetime %></td>
        <td><%= shift_exception.end_datetime %></td>
        <td><%= shift_exception.employee_id %></td>
        <td><%= shift_exception.is_absence %></td>
        <td><%= shift_exception.shift_id %></td>
        <td><%= link_to 'Show', shift_exception %></td>
        <td><%= link_to 'Edit', edit_shift_exception_path(shift_exception) %></td>
        <td><%= link_to 'Destroy', shift_exception, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

